extends layout

block content
  div.header-wrapper
        ol.breadcrumb
          li
            a(href="home")
              |Tuetle
          li.active
              |#{title} 
  form.login(action = "/login" method = "post")
    div.btn-group-vertical
      lable(for = "username")
        input(type="text" id="username" name="username" placeholder="username" required)
      lable(for = "password")
        input(type="password" id="password" name="password" placeholder="userpassword" required)
    div.control-btn
      input(type = "submit" value="login" )
      div.signup
        a(href="/signup")
            |signup
