extends layout-login

block content
  div.header-wrapper.blue-title
    ol.breadcrumb
      li
        a(href="home")
          |Tuetle
      li.active
          |#{title} 
      .line
  form.signup.well(action = "/update" method = "post")
    div.signup-title
    div.input-list
      .input-left
        .input-group-lg.input-group
          span.input-group-addon#sizing-addon1
              img(src="/images/assets/Username-icon.png")
          input(type="text" aria-describedby="sizing-addon1" id="username" name="username" placeholder="Username" required)
        .input-group-lg.input-group
          span.input-group-addon#sizing-addon2
            img(src="/images/assets/Password-icon.png")
          input(type="password" aria-describedby="sizing-addon1" id="password" name="password" placeholder="Password" required)
        .input-group-lg.input-group
          span.input-group-addon#sizing-addon1
            img(src="/images/assets/phone.png")
          input(type= "text" aria-describedby="sizing-addon1" id="phone" name="phone" placeholder="Phone" required)
      .middle-line
      .input-right
        .input-group-lg.input-group
          span.input-group-addon#sizing-addon1
            img(src="/images/assets/email-icon.png")
          input(type="text" aria-describedby="sizing-addon1"  id="email" name="email" placeholder="Email" required)
        .input-group-lg.input-group
          span.input-group-addon#sizing-addon1
            img(src="/images/assets/age-icon.png")
          input(type="number" aria-describedby="sizing-addon1"  id="age" name="age" placeholder="Age" required)
        .input-group-lg.input-group
          span.input-group-addon#sizing-addon1
            img(src="/images/assets/add-icon.png")
          textarea#bio(name="bio" aria-describedby="sizing-addon1" cols="30" rows="10" placeholder="Add a Bio" required)
    div.control-btn
      input(type = "submit" value="UPDATE" )
      a(href="/login")
        |LOGIN
    include modals/alert
    include modals/confirm
block  scripts
    script(src='https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js')
    script(src='https://cdn.bootcss.com/jquery.form/4.2.2/jquery.form.js')
    script(src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js" )
    scrript(src='/js/conrollers/userController.js')
    script(src='/js/view/account.js')